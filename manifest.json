{
    "manifest_version": 3,
    "name": "PulsePost",
    "version": "1.0",
    "description": "Automated tweet poster from CSV with random delays.",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab",
        "alarms",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*"
    ],
    "action": {},
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}